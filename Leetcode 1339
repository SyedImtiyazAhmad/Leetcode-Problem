/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
class Solution {
    public TreeNode treesum(TreeNode root){
        if(root==null){
            return null;
        }
        treesum(root.left);
        treesum(root.right);
        if(root.left==null && root.right==null){
            root.val=root.val;
        }
        else if(root.left==null){
            root.val+=root.right.val;
        }
        else if(root.right==null){
            root.val+=root.left.val;
        }
        else{
            root.val+=root.left.val+root.right.val;
        }
        return root;
    }
    public long reqans(TreeNode root, long total) {
    if (root == null) return 0;

    long leftMax = reqans(root.left, total);
    long rightMax = reqans(root.right, total);

    long currMax = 0;

    if (root.left != null) {
        currMax = root.left.val * (total - root.left.val);
    }
    if (root.right != null) {
        currMax = Math.max(
            currMax,
            root.right.val * (total - root.right.val)
        );
    }

    return Math.max(currMax, Math.max(leftMax, rightMax));
}

    public int maxProduct(TreeNode root) {
        treesum(root);
        return (int)(reqans(root, root.val) % 1000000007);

    }
}

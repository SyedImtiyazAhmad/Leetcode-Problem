class Solution {
    public int binaryGap(int n) {
       if(Integer.bitCount(n)==1){
        return 0;
       }
       int j=0;
       int max=0;
       boolean flag=false;
       while(n>0){
        if(flag){
            j++;
        }
        if(n%2==1){
            if(j==0){
               flag=true; 
            }
            else{
                max=Math.max(j,max);
                j=0;
            }
        }
        n/=2;
       }
       return max;
    }
}
